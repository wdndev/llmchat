{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/main/*": ["src/main/*"],
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types", "src/types"],
  },
  "include": ["src/main/**/*.ts", "src/types/**/*.d.ts"]
}
